<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_toast"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="showUpMessage"
        android:text="@string/button_toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_count"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="countUp"
        android:text="@string/button_count"
        app:layout_constraintBaseline_toBaselineOf="@id/button_toast"
        app:layout_constraintStart_toEndOf="@id/button_toast" />

    <TextView
        android:id="@+id/textView_count"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/textView_toast"
        android:textSize="200px"
        app:layout_constraintTop_toBottomOf="@id/button_toast"
        app:layout_constraintStart_toStartOf="@id/button_toast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/teal_200"/>

</androidx.constraintlayout.widget.ConstraintLayout>